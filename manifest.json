{
    "manifest_version": 2,
    "name": "XKExt",
    "version": "1.0",
    "description": "Quickly Generate XK Passwords!",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "permissions": [
        "menus",
        "notifications",
        "activeTab",
        "storage",
        "clipboardWrite"
    ],
    "background": {
        "scripts": [
            "xkext.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "applications": {
        "gecko": {
            "id": "xkext@hfnr.cc"
        }
    }
}