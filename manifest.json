{
    "manifest_version": 2,
    "name": "XKExt",
    "version": "1.2.1",
    "description": "Quickly Generate XK Passwords!",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "permissions": [
        "menus",
        "activeTab",
        "storage",
        "clipboardWrite"
    ],
    "background": {
        "scripts": [
            "xkext.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "applications": {
        "gecko": {
            "id": "xkext@hfnr.cc"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "page-script.js"
            ]
        }
    ]
}